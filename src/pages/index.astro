---
import AppLayout from "../layouts/App.astro";
import GlobalNav from "../layouts/GlobalNav.astro";
import "@/assets/styles/pages/_index.scss";
import Link from "../components/Link.astro";

const meta = {
  title: "TOP | SkyCoffee",
  description:
    "SkyCoffeeのホームページです。心静かにコーヒーを。立ち止まって、空の青さを眺めて、一息つきましょう。",
  "og:title": "TOP | SkyCoffee",
  "og:description":
    "SkyCoffeeのホームページです。心静かにコーヒーを。立ち止まって、空の青さを眺めて、一息つきましょう。",
  "og:image": "/src/assets/img/pc_main-visual.jpg",
};

const nav = [
  {
    name: "menu",
    path: "",
  },
  {
    name: "blog",
    path: "",
  },
  {
    name: "access",
    path: "",
  },
];
---

<AppLayout {meta}>
  <div class="kv">
    <div class="kv__inner"></div>
    <div class="kv__background">
      <picture>
        <source
          srcset="/src/assets/img/pc_main-visual.webp"
          type="image/webp"
          media="(min-width: 768px)"
        />
        <source
          srcset="/src/assets/img/pc_main-visual.jpg"
          media="(min-width: 768px)"
        />
        <source
          srcset="/src/assets/img/sp_main-visual.webp"
          type="image/webp"
        />
        <img
          src="/src/assets/img/sp_main-visual.jpg"
          alt="コーヒーカップが並ぶ画像"
          width="375"
          height="340"
          decoding="async"
          loading="eager"
        />
      </picture>
    </div>
  </div>
  <div class="globalNavWrap">
    <GlobalNav nav={nav} />
  </div>
  <div class="wrapper">
    <div class="concept">
      <div class="concept__inner">
        <div class="concept__imgWrap">
          <picture>
            <source
              srcset="/src/assets/img/concept.webp"
              type="image/webp"
              media="(min-width: 768px)"
            />
            <img
              class="concept__img"
              src="/src/assets/img/concept.jpg"
              alt="コーヒーカップが並ぶ画像"
              width="335"
              height="339"
              decoding="async"
              loading="eager"
            />
          </picture>
        </div>
        <div class="concept__textWrap">
          <div class="concept__textInner">
            <p class="concept__subTitle">Concept</p>
            <h2 class="concept__title">心静かにコーヒーを</h2>
            <p class="concept__text">
              立ち止まって、<br />空の青さを眺めて、<br />一息つきましょう
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="blog">
      <h2 class="blog__title">blog</h2>
      <p class="blog__subTitle">ブログ</p>
      <ul class="blog__list">
        <li class="blog__item">
          <a class="blog__link" href="">
            <div class="blog__linkInner">
              <div class="blog__imgWrap">
                <picture>
                  <source
                    src="/src/assets/img/thumbnail01.webp"
                    type="image/webp"
                  />
                  <img
                    class="blog__img"
                    src="/src/assets/img/thumbnail01.jpg"
                    alt="キッチンカーの画像"
                    width="335"
                    height="172"
                    decoding="async"
                    loading="lazy"
                  />
                </picture>
              </div>
              <div class="blog__textWrap">
                <h3 class="blog__heading">コーヒーカー始めました。</h3>
                <time class="blog__datetime" datetime="2030-08-08"
                  >2030.08.08</time
                >
              </div>
            </div>
          </a>
        </li>
        <li class="blog__item">
          <a class="blog__link" href="">
            <div class="blog__linkInner">
              <div class="blog__imgWrap">
                <picture>
                  <source
                    src="/src/assets/img/thumbnail02.webp"
                    type="image/webp"
                  />
                  <img
                    class="blog__img"
                    src="/src/assets/img/thumbnail02.jpg"
                    alt="キッチンカーの画像"
                    width="335"
                    height="172"
                    decoding="async"
                    loading="lazy"
                  />
                </picture>
              </div>
              <div class="blog__textWrap">
                <h3 class="blog__heading">濃厚クリーミーなミルクをどうぞ</h3>
                <time class="blog__datetime" datetime="2030-08-05"
                  >2030.08.05</time
                >
              </div>
            </div>
          </a>
        </li>
        <li class="blog__item">
          <a class="blog__link" href="">
            <div class="blog__linkInner">
              <div class="blog__imgWrap">
                <picture>
                  <source
                    src="/src/assets/img/thumbnail03.webp"
                    type="image/webp"
                  />
                  <img
                    class="blog__img"
                    src="/src/assets/img/thumbnail03.jpg"
                    alt="キッチンカーの画像"
                    width="335"
                    height="172"
                    decoding="async"
